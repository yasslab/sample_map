<div id="<%= dom_id spot %>">
  <p>
    <strong>Name:</strong>
    <%= spot.name %>
  </p>

  <p>
    <strong>Photo:</strong>
    <%= link_to spot.photo.filename, spot.photo if spot.photo.attached? %>
  </p>

  <p>
    <strong>Lat:</strong>
    <%= spot.lat %>
  </p>

  <p>
    <strong>Lng:</strong>
    <%= spot.lng %>
  </p>

</div>
